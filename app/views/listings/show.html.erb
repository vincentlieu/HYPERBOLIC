<div class="d-flex justify-content-end">
<% if current_user.id == @listing.user_id %>
  <div>
    <%= link_to "Edit", edit_listing_path(@listing), class: "btn btn-primary mr-2" %>
    <%= link_to "Remove", listing_path(@listing.id), data: { toggle: "modal", target: "#RemoveListingModal" }, class: "btn btn-danger" %>
  </div>
    <!-- Modal -->
      <div class="modal fade" id="RemoveListingModal" tabindex="-1" role="dialog" aria-labelledby="RemoveListingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-danger" role="document">
          <div class="modal-content">

            <div class="modal-header">
              <h5 class="modal-title" id="RemoveListingModalLabel">Confirmation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              Are you sure you want to remove this listing?
            </div>

            <!-- Delete button in the footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <%= link_to "Delete", listing_path(@listing.id), method: :delete, class: "btn btn-danger" %>
            </div>
        </div>
      </div>
    </div>
<% else %>
  <% # Check to see if the user has already favourited the listing %>
    <% if current_user.favourites.exists?(@listing.id) %>
      <%= link_to image_tag("favourited.svg"), favourite_listing_path(@listing, type: "unfavourite", id: @listing.id), data: { toggle: "tooltip", placement: "bottom", title: "Favourited" }, method: :put %>
  <% else %>
    <%= link_to image_tag("favourite.svg"), favourite_listing_path(@listing, type: "favourite", id: @listing.id), data: { toggle: "tooltip", placement: "bottom", title: "Add to Favourites" }, method: :put %>
  <% end %>
<% end %>
</div>

<div class="container ml-auto">
    <div class="row">
    <h1><%= @listing.title %></h1>
    </div>
    <div class="row">
        <div class="col">
        <% if @listing.picture.attached? %>
            <%= image_tag @listing.picture %>
        <% end %>
        </div>
    
    <div class="col">
        <div class="mb-3">
            <h2 class="font-weight-bold mb-3"><%= number_to_currency(@listing.price, precision: 0) %></h2>
        </div>
        <div class="mb-2">
            <p><%= @listing.brand.name %> - <%= @listing.category.name %><p>
        </div>
        <div class="mb-2">
            <h5>Condition:</h5> 
            <%= @listing.condition.name %>
        </div>
        <div class="mb-2">
            <h5>Description:</h5>
            <%= @listing.description %>
        </div>
        <% if current_user.id != @listing.user_id %>
        <div class="mb-2">
          <button data-stripe="payment" class="btn btn-primary">Purchase</button>
        </div>
        <% end %>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>

<script>
  document
    .querySelector("[data-stripe='payment']")
    .addEventListener("click", () => {
      const stripe = Stripe(
        "<%= Rails.application.credentials.dig(:stripe, :public_key) %>"
      );

      stripe.redirectToCheckout({
        sessionId: "<%= @session_id %>"
      });
    });
</script>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>

 <div class="row row-cols-1 row-cols-md-4">
    <% @listings.each do |listing| %>
    <div class>
    <div class= "listing-cards card m-3">
        <% if listing.picture.attached? %>
        <%= image_tag listing.picture.service_url, class: "card-img-top" %>
    <% else %>
        <%= image_tag "placeholder-listing.png", alt: "listing image not attached", class: "card-img-top" %>
    <% end %>
    <hr>
        <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= listing.title %></h5>
            <div class="d-flex justify-content-between align-items-center">
                <p class= "card-price"><%= number_to_currency(listing.price, precision: 0) %></p>
                <%= link_to "show", listing_path(listing.id), class: "btn btn-primary" %>
            </div>
        </div>
    </div>
    </div>
    <% end %>
</div>
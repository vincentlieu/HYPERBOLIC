<div class=" main-content container">
    <h2>Purchases</h2>
    <% if @purchases.exists? %>
        <div class="row">
            <div class="col font-weight-bold">Date purchased</div>
            <div class="col font-weight-bold">Price</div>
            <div class="col font-weight-bold">Title</div>
            <div class="col font-weight-bold">Receipt</div>
        </div>
        <% @purchases.each do |purchase| %>
            <div class="row">
                <div class="col">
                    <%= purchase.created_at.strftime("%Y/%m/%d %H:%M") %>
                </div>
                <div class="col">
                    <%= number_to_currency(purchase.listing.price, precision: 0) %>
                </div>
                <div class="col">
                    <%= link_to purchase.listing.title, listing_path(purchase.listing_id) %>
                </div>
                <div class="col">
                    <%= purchase.stripe_receipt %>
                </div>
            </div>
        <% end %>
    <% else %>
        <%= "You haven't made any purchases yet." %>
    <% end %>
</div>
